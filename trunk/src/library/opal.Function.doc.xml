<?xml version="1.0"?>

<module>

	<name>Function</name>

	<functions>
	
		<name>Elementary Functions</name>
	
		<function>
			<name>Function.identity</name>
			<arguments>
				<argument>a</argument>
			</arguments>
			<return>value</return>
			<description>
				<p><code>Function.identity</code> returns its argument.</p>
			</description>
			<example>
			    <p>
				    <code>Function.identity 'test'</code>
				    <br/><span class="output"><code>"test"</code></span>
			    </p>
			</example>
		</function>
		
		<function>
			<name>Function.constant</name>
			<arguments>
				<argument>a</argument>
			</arguments>
			<return>function</return>
			<description>
				<p><code>Function.constant(a)</code> is a function that always returns <code>a</code>.</p>
			</description>
			<example>
                <p>
                    <code>test = Function.constant 'test'</code>
                </p>
                <p>
                    <code>test 5</code>
				    <br/><span class="output"><code>"test"</code></span>
				</p>
				<p>
				    <code>test 'fred'</code>
				    <br/><span class="output"><code>"test"</code></span>
                </p>
			    
			</example>
		</function>
	
	</functions>
	
</module>